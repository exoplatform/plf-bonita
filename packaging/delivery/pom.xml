<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <parent>
    <groupId>org.exoplatform.bonita</groupId>
    <artifactId>exo.bonita.packaging</artifactId>
    <version>1.0.0-SNAPSHOT</version>
  </parent>
  <artifactId>exo.bonita.packaging.delivery</artifactId>
  <packaging>pom</packaging>
  <name>eXo Platform for Bonita - Delivery</name>
  <profiles>
    <profile>
      <id>distrib</id>
      <dependencies>
        <!-- Tomcat server -->
        <dependency>
          <groupId>org.exoplatform.bonita</groupId>
          <artifactId>exo.bonita.packaging.tomcat.assembly</artifactId>
          <classifier>tomcat</classifier>
          <version>${project.version}</version>
          <type>zip</type>
        </dependency>
        <!-- JBoss EAP EARs -->
        <dependency>
          <groupId>org.exoplatform.bonita</groupId>
          <artifactId>exo.bonita.packaging.jbosseap</artifactId>
          <classifier>ears</classifier>
          <version>${project.version}</version>
          <type>zip</type>
        </dependency>
        <!-- Documentation -->
        <dependency>
          <groupId>org.exoplatform.bonita</groupId>
          <artifactId>exo.bonita.doc.user</artifactId>
          <version>${project.version}</version>
          <type>zip</type>
        </dependency>
        <dependency>
          <groupId>org.exoplatform.bonita</groupId>
          <artifactId>exo.bonita.doc.installguide</artifactId>
          <version>${project.version}</version>
          <type>zip</type>
        </dependency>
        <dependency>
          <groupId>org.exoplatform.bonita</groupId>
          <artifactId>exo.bonita.sample.assembly</artifactId>
          <version>${project.version}</version>
          <type>zip</type>
        </dependency>
        <dependency>
          <groupId>org.exoplatform.bonita</groupId>
          <artifactId>exo.bonita.migration.tool</artifactId>
          <version>${project.version}</version>
        </dependency>
        <dependency>
          <groupId>org.exoplatform.bonita</groupId>
          <artifactId>exo.bonita.migration.config</artifactId>
          <version>${project.version}</version>
          <type>zip</type>
        </dependency>
        <dependency>
          <groupId>org.exoplatform.bonita</groupId>
          <artifactId>exo.bonita.migration.doc</artifactId>
          <version>${project.version}</version>
          <type>zip</type>
        </dependency>
        <dependency>
          <groupId>org.exoplatform.bonita</groupId>
          <artifactId>exo.bonita.migration.script</artifactId>
          <version>${project.version}</version>
          <type>zip</type>
        </dependency>
      </dependencies>
      <build>
        <finalName>eXoPlatform-for-Bonita-${project.version}</finalName>
        <plugins>
          <plugin>
            <artifactId>maven-assembly-plugin</artifactId>
            <executions>
              <execution>
                <id>distribution</id>
                <phase>package</phase>
                <goals>
                  <goal>single</goal>
                </goals>
                <configuration>
                  <descriptors>
                    <descriptor>src/main/assembly/platform-for-bonita-distribution.xml</descriptor>
                  </descriptors>
                  <appendAssemblyId>false</appendAssemblyId>
                </configuration>
              </execution>
            </executions>
          </plugin>
        </plugins>
      </build>
    </profile>
  </profiles>
</project>
