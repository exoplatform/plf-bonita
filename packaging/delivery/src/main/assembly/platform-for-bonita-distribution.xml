<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.1"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.1 http://maven.apache.org/xsd/assembly-1.1.1.xsd">
	<id>distribution</id>
	<formats>
		<format>zip</format>
	</formats>
	<includeBaseDirectory>true</includeBaseDirectory>
	<fileSets>
		<fileSet>
			<directory>src/main/resources</directory>
			<outputDirectory></outputDirectory>
		</fileSet>
	</fileSets>
	<dependencySets>
		<dependencySet>
			<includes>
				<include>org.exoplatform.bonita:exo.bonita.packaging.assembly:zip:tomcat</include>
			</includes>
			<outputDirectory>/binaries</outputDirectory>
			<unpack>true</unpack>
			<useDefaultExcludes>true</useDefaultExcludes>
		</dependencySet>
		<dependencySet>
			<includes>
				<include>org.exoplatform.bonita:exo.bonita.packaging.jbosseap:zip:ears</include>
			</includes>
			<outputDirectory>/binaries</outputDirectory>
			<unpack>true</unpack>
			<useDefaultExcludes>true</useDefaultExcludes>
		</dependencySet>
		<dependencySet>
			<includes>
				<include>org.exoplatform.bonita:exo.bonita.doc.user:zip</include>
			</includes>
			<outputDirectory>/docs/user-guide</outputDirectory>
			<unpack>true</unpack>
			<useDefaultExcludes>true</useDefaultExcludes>
		</dependencySet>
		<dependencySet>
			<includes>
				<include>org.exoplatform.bonita:exo.bonita.doc.installguide:zip</include>
			</includes>
			<outputDirectory>/docs/install-guide</outputDirectory>
			<unpack>true</unpack>
			<useDefaultExcludes>true</useDefaultExcludes>
		</dependencySet>
		<dependencySet>
			<includes>
				<include>org.exoplatform.bonita:exo.bonita.sample.assembly:zip</include>
			</includes>
			<outputDirectory>/processes</outputDirectory>
			<unpack>true</unpack>
			<useDefaultExcludes>true</useDefaultExcludes>
		</dependencySet>
		<dependencySet>
			<outputDirectory>/bos-migration/lib</outputDirectory>
			<includes>
				<include>org.exoplatform.bonita:exo.bonita.migration.tool:jar</include>
			</includes>
		</dependencySet>
		<dependencySet>
			<outputDirectory>/bos-migration/config</outputDirectory>
			<includes>
				<include>org.exoplatform.bonita:exo.bonita.migration.config:zip</include>
			</includes>
		</dependencySet>
		<dependencySet>
			<unpack>true</unpack>
			<outputDirectory>/bos-migration/doc</outputDirectory>
			<includes>
				<include>org.exoplatform.bonita:exo.bonita.migration.doc:zip</include>
			</includes>
		</dependencySet>
		<dependencySet>
			<unpack>true</unpack>
			<outputDirectory>/bos-migration/script</outputDirectory>
			<includes>
				<include>org.exoplatform.bonita:exo.bonita.migration.script:zip</include>
			</includes>
		</dependencySet>
	</dependencySets>
</assembly>
